<div id="menu" class="well well-sm">
    <div id="login">
        Anmelden:
        {{input type='password' value=password placeholder="Passwort"}}
    </div>

    {{input type="text" placeholder='Gruppe filtern' value=filtersn}}
    &nbsp;{{input type="checkbox" checked=tbodyLineBreak}} Zeilenumbruch
    &nbsp;{{input type="checkbox" checked=tbodyLargeFont}} Große Schrift
    {{#if admin}}
        &nbsp;<button class="btn btn-primary" {{action createCSV}}>Übersicht speichern</button>
    {{/if}}
</div>

<table class="table table-striped table-hover lapTable">
    <thead>
    <tr>
        <th></th>
        <th>Setzrunde</th>
        {{#each labels}}
            <th>{{label}}</th>
        {{/each}}
        <th>Delta</th>
        <th>Geschwindigkeit</th>
    </tr>
    </thead>
    <tbody {{bind-attr class=tbodyClass}}>
    {{#each groupedResults}}
        <tr>
            <td colspan="10" class="group"><strong>Gruppe {{group}}</strong></td>
        </tr>
        {{#each races}}
            <tr>
                <td class="startnummer"><strong>{{startnummer}}</strong></td>
                {{#each laps}}
                    {{#if runde}}
                        {{#unless empty}}
                            {{#if gueltig}}
                            <td>
                                {{laptime}}&nbsp;s
                                {{#if ../../../../../../tbodyLineBreak}}
                                    <br>
                                {{else}}
                                    &bull;
                                {{/if}}
                                &#916;&nbsp;=&nbsp;{{delta}}&nbsp;s
                            {{else}}
                            <td class="ungueltig">
                                {{laptime}}&nbsp;s
                                {{#if ../../../../../../tbodyLineBreak}}
                                    <br>
                                {{else}}
                                    &bull;
                                {{/if}}
                                &#916;&nbsp;=&nbsp;{{delta}}&nbsp;s
                            {{/if}}

                            {{#if admin}}
                                &nbsp;<input type="checkbox" {{bind-attr checked=checked}} {{action toggleCheckbox this}}>
                            {{/if}}
                        </td>
                        {{else}}
                            <td>
                                {{runde}}
                            </td>
                        {{/unless}}
                    {{else}}
                        <td>
                            {{laptime}}&nbsp;s
                        </td>
                    {{/if}}
                {{/each}}
                <td>
                    <strong>&#916; = {{meanDelta}}&nbsp;s</strong>
                </td>
                <td>
                    <strong>v = {{velocity}}&nbsp;km/h</strong>
                </td>
                <td>
                    {{#if admin}}&nbsp;
                        <button class="btn btn-danger btn-sm" {{action deleteStartnummer this}}>&cross;</button>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    {{/each}}
    </tbody>
</table>
